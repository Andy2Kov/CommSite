<link rel="stylesheet" href="~/css/signin.css" type="text/css" />
@model PhotoBank.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="text-center mt-5 mb-2">
    <form method="post" class="form-signin" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <img class="mb-4" src="~/img/logo1.png" alt="" width="72" height="72">
        <h4 class="h4 mb-3 font-weight-normal"><ya-tr-span data-index="0-0" data-value="Please sign in" data-translation="Пожалуйста, войдите в систему" data-type="trSpan" data-selected="false">Пожалуйста, войдите в систему</ya-tr-span></h4>
        <label asp-for="Email" class="sr-only"><ya-tr-span data-index="1-0" data-value="Email address" data-translation="Адрес электронной почты " data-type="trSpan">Адрес электронной почты </ya-tr-span></label>
        <input asp-for="Email" id="Email" class="form-control" placeholder="Эл. адрес" required="" autofocus="">
        @*<span asp-validation-for="Email"></span>*@
        <label asp-for="Password" class="sr-only"><ya-tr-span data-index="1-0" data-value="Password" data-translation="пароль" data-type="trSpan">пароль</ya-tr-span></label>
        <input asp-for="Password" id="Password" class="form-control" placeholder="Пароль" required="">
        @*<span asp-validation-for="Password"></span>*@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="RememberMe"><ya-tr-span data-index="2-0" data-value="RememberMe" data-translation="Запомнить меня" data-type="trSpan">
                    Запомнить меня
                </ya-tr-span>
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block mt-5 mb-3" type="submit"><ya-tr-span data-index="3-0" data-value="Sign in" data-translation="Вход" data-type="trSpan">Вход</ya-tr-span></button>
        <a class="btn-link" asp-controller="Account" asp-action="ForgotPassword" asp-route-email=@User.Identity.Name>Забыли пароль?</a>
    </form>
</div>