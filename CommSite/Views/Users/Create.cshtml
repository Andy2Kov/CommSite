<link rel="stylesheet" href="~/css/signin.css" type="text/css" />
@model PhotoBank.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}

<div class="text-center mt-5 mb-2">
    <form method="post" class="form-signin" asp-controller="Users" asp-action="Create">
        <label asp-for="Email" class="sr-only"><ya-tr-span data-index="1-0" data-value="Email address" data-translation="Адрес электронной почты " data-type="trSpan">Адрес электронной почты </ya-tr-span></label>
        <input asp-for="Email" id="Email" class="form-control" type="email" placeholder="Эл. адрес" required="" autofocus="">
        <label asp-for="Password" class="sr-only"><ya-tr-span data-index="1-0" data-value="Password" data-translation="Пароль " data-type="trSpan">Пароль </ya-tr-span></label>
        <input asp-for="Password" id="Password" class="form-control" type="password" placeholder="Пароль" required="" autofocus="">
        @*<span asp-validation-for="Email"></span>*@
        <label asp-for="FirstName" class="sr-only"><ya-tr-span data-index="1-0" data-value="First Name" data-translation="Имя " data-type="trSpan">Имя </ya-tr-span></label>
        <input asp-for="FirstName" id="FirstName" class="form-control" maxlength="200" placeholder="Имя" required="" autofocus="">
        <label asp-for="LastName" class="sr-only"><ya-tr-span data-index="1-0" data-value="Last Name" data-translation="Фамилия " data-type="trSpan">Имя </ya-tr-span></label>
        <input asp-for="LastName" id="LastName" class="form-control" maxlength="200" placeholder="Фамилия" required="" autofocus="">
        <label>Пол</label>
        <label><input asp-for="Sex" value="Мужской" type="radio" />Мужской</label>
        <label><input asp-for="Sex" value="Женский" type="radio" />Женский</label>
        <label asp-for="BirthDay" class="sr-only"><ya-tr-span data-index="1-0" data-value="BirthDay" data-translation="Дата рождения" data-type="trSpan">Дата рождения</ya-tr-span></label>
        <input asp-for="BirthDay" id="BirthDay" class="form-control" type="date" min="1900-01-01" max="2020-01-01" placeholder="Дата рождения" required="" autofocus="">
        @*<span asp-validation-for="BirthDay"></span> btn btn-sm btn-primary*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="btn btn-lg btn-primary btn-block mt-5 mb-3" type="submit"><ya-tr-span data-index="3-0" data-value="Save" data-translation="Добавить" data-type="trSpan">Добавить</ya-tr-span></button>
    </form>
</div>
