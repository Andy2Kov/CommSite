<link rel="stylesheet" href="~/css/signin.css" type="text/css" />
@model PhotoBank.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Обратная связь";
}

<div class="text-center mt-5 mb-2">
    @using (Html.BeginForm("Feedback", "Home", FormMethod.Post))
    {
        <p>
            <label>Сообщение от</label><br />
            <input type="text" readonly="readonly" width="250" value=@Model.Email name="email" />
        </p>
        <p>
            <label>Текст сообщения</label><br />
            <textarea name="text" cols="50" rows="10"></textarea>
        </p>

        <button type="submit" class="btn btn-primary">Отправить</button>
    }
</div>